<div class="container">
  <h1 class="new-book-title">New Book</h1>

  <div class="new-book-form">
  <%= form_for(Book.new) do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>

    <%= form.label :author %>
    <%= form.text_field :author %>

    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5, message: "Informe um nÃºmero entre 1 e 5" %>

    <%= form.label :description %>
    <%= form.text_area :description %>

    <%= form.submit 'Create Book', class: 'btn btn-primary' %>
  <% end %>
  </div>
  <div class="new-book">
    <div class="btn-div">
      <%= link_to 'Book List', books_path, class: 'index-book-link' %>
    </div>
  </div>
</div>